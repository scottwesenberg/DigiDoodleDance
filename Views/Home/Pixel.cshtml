
@{
    ViewData["Title"] = "Pixel Art";
}



<div class="text-center">

    <div>
        <h1>Pixel Art Creator</h1>


        <h2>Pick A Color</h2>
        <input type="color" id="colorPicker">

        <h2>Design Canvas</h2>
        <label for="pixelSize">Pixel Size:</label>
        <input type="range" id="pixelSize" min="1" max="10" value="2">

        <button id="clearCanvasButton" class=" bg-transparent">
            <i class="fa-solid fa-trash-can"></i>
        </button>

        <button id="fillCanvasButton" class=" bg-transparent">
            <i class= "fa-solid fa-fill"></i>
        </button>
        <br/>

        <canvas id="pixelCanvas" width="400" height="400"></canvas>

        <div>
            <input type="text" id="dataInput" placeholder="Enter Name">
            <button id="saveButton">Save Canvas</button>
            <script src="~/Images"></script>
        </div>
    </div>
</div>

       
